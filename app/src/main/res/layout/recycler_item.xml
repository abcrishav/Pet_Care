<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/purple_500"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/pet_name"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="41dp"
            android:layout_marginLeft="41dp"
            android:layout_toEndOf="@+id/checkBox"
            android:layout_toRightOf="@+id/checkBox"
            android:text="pet_name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vaccine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/pet_name"
            android:layout_alignParentLeft="true"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/date"
            android:layout_width="148dp"
            android:layout_height="33dp"
            android:layout_below="@id/vaccine_name"
            android:layout_alignParentRight="true"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/black"
            android:layout_marginRight="22dp"
            android:layout_toEndOf="@+id/checkBox"
            android:layout_toRightOf="@+id/checkBox"
            android:text="23/05/1999"
            android:textSize="16sp"
            android:textStyle="normal" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="168dp"
            android:layout_height="38dp"
            android:layout_below="@id/vaccine_name"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="18dp"
            android:clickable="false"
            android:shadowColor="#FFFFFF"
            android:text="vaccination_done"
            android:textColor="@color/black"
            android:textColorHighlight="#FFFFFF"
            android:textSize="16sp"
            android:theme="@style/Widget.AppCompat.CompoundButton.CheckBox" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>